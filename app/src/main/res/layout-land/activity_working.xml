<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".WorkingActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/input"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layout_1"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/layout_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/latitude"
                android:textAlignment="center"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/first_deg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints="52"
                    android:ems="2"
                    android:hint="@string/g52"
                    android:inputType="numberSigned"
                    android:maxLength="3"
                    android:text="@string/g52"
                    android:textAlignment="textEnd"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/hintTextColor"
                    android:textSize="30sp"
                    tools:ignore="TextContrastCheck,TextContrastCheck,DuplicateSpeakableTextCheck,DuplicateSpeakableTextCheck" />

                <TextView
                    android:id="@+id/deg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deg"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/first_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints="44"
                    android:ems="2"
                    android:hint="@string/m44"
                    android:inputType="numberSigned"
                    android:maxLength="2"
                    android:text="@string/m44"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/hintTextColor"
                    android:textSize="30sp"
                    tools:ignore="TextContrastCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />

                <TextView
                    android:id="@+id/min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/min"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/first_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints="03.745"
                    android:ems="4"
                    android:hint="@string/s03"
                    android:inputType="numberDecimal"
                    android:maxLength="7"
                    android:text="@string/s03"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/hintTextColor"
                    android:textSize="30sp"
                    tools:ignore="TextContrastCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />

                <TextView
                    android:id="@+id/sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sec"
                    android:textAlignment="center"
                    android:textSize="30sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/longitude"
                android:textAlignment="center"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/second_deg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints="52"
                    android:ems="2"
                    android:hint="@string/g52"
                    android:inputType="numberSigned"
                    android:maxLength="3"
                    android:text="@string/g52"
                    android:textAlignment="textEnd"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/hintTextColor"
                    android:textSize="30sp"
                    tools:ignore="TextContrastCheck,TextContrastCheck" />

                <TextView
                    android:id="@+id/deg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deg"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/second_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints="44"
                    android:ems="2"
                    android:hint="@string/m44"
                    android:inputType="numberSigned"
                    android:maxLength="2"
                    android:text="@string/m44"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/hintTextColor"
                    android:textSize="30sp"
                    tools:ignore="TextContrastCheck,TextContrastCheck" />

                <TextView
                    android:id="@+id/min2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/min"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/second_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints="03.745"
                    android:ems="4"
                    android:hint="@string/s03"
                    android:inputType="numberDecimal"
                    android:maxLength="7"
                    android:text="@string/s03"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/hintTextColor"
                    android:textSize="30sp"
                    tools:ignore="TextContrastCheck,TextContrastCheck" />

                <TextView
                    android:id="@+id/sec2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sec"
                    android:textAlignment="center"
                    android:textSize="30sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/limitation"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:contentDescription="@string/TODO"
                app:srcCompat="@drawable/limitation" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_1">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:background="@color/dark_background"
            android:entries="@array/scale"
            android:spinnerMode="dialog"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_calculation"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/aldrich"
            android:text="@string/calculation" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>